<%= render 'shared/page_title', title: "Chef #{@chef.chefname}'s profile" %>

<div class="row">
  <div class="col-md-4 offset-md-4 center">
    <%= gravatar_for @chef, size: 150 %>
  </div>
</div>

<% if @chef.recipes.count != 0 %>
  <h4 class="center my-4"><%= @chef.chefname.split.map(&:capitalize).join(' ') %>'s recipes</h4>
  <div class="center">
    <%= will_paginate @chef_recipes %>
  </div>
  <%= render 'recipes/recipe', obj: @chef_recipes %>
  <div class="center">
    <%= will_paginate @chef_recipes %>
  </div>
<% else %>
  <h4 class="center my-4">No recipes yet</h4>
<% end %>