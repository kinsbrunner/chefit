<% if obj.errors.any? %>
  <div class="row">
    <div class="col-md-8 offset-md-2 alert alert-danger" role="alert">
      <strong>
        <%= pluralize(obj.errors.count, "error") %>
        prohibited this <%= obj.class %> from being saved:
      </strong>
      </ br>
      <ul>
        <% obj.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>