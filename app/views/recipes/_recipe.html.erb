<% obj.each do |recipe| %>
  <div class="row">
    <div class="col-md-2">
      <section class="chef_info center">
        <%= gravatar_for(recipe.chef, size: 120) %>
      </section>
    </div>
    <div class="col-md-8 well">
      <h3><%= link_to recipe.name, recipe_path(recipe) %></h3>
      <p><%= truncate(recipe.description, length:150) %></p>
      <% if recipe.ingredients.any? %>
        <p>Ingredients: <%= render recipe.ingredients %></p>
      <% end %>
      <p>
        <span class="quiet"><small>Created <%= time_ago_in_words(recipe.created_at) %> ago by <%= recipe.chef.chefname.split.map(&:capitalize).join(' ') %></small></span>
      </p>
      <% if logged_in? && (current_chef == recipe.chef || current_chef.admin?) %>
        <div class="recipe-actions">
          <%= link_to 'Edit Recipe', edit_recipe_path(recipe), class: 'btn btn-sm btn-warning' %>
          <%= link_to 'Delete Recipe', recipe_path(recipe), method: :delete, 
                                                             data: { confirm: 'Are you sure you want to delete this recipe?' },
                                                             class: 'btn btn-sm btn-danger' %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>