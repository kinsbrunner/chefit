<%= render 'shared/page_title', title: "Log in" %>

<%= simple_form_for :session, html: { class: 'form-horizontal login-form' }, wrapper: :horizontal_form, url: login_path do |f| %>
  <%= f.input :email, label: false, placeholder: 'Enter your email', input_html: { class: 'col-md-6 offset-md-3 form-control' }, wrapper_html: { class: 'row' } %>
  <%= f.input :password, label: false, placeholder: 'Enter your password', input_html: { class: 'col-md-6 offset-md-3 form-control' }, wrapper_html: { class: 'row' } %>

  <div class="form-group row">
    <div class="offset-md-3 col-md-6">
      <%= f.button :submit, 'Log in', class: 'btn btn-success mr-4' %>
      [ <%= link_to "Don't have an account? Sign up now!", signup_path %> ]
    </div>
  </div>
<% end %>