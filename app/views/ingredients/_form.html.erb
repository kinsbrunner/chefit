<%= render 'shared/errors', obj: @ingredient %>

<div class="row">
  <div class="col-md-12">
    <%= simple_form_for @ingredient, html: { class: 'form-horizontal' }, wrapper: :horizontal_form do |f| %>
      <%= f.input :name, placeholder: 'Name of ingredient', autofocus: true, label_html: { class: 'col-md-2 col-form-label' }, input_html: { class: 'col-md-10 form-control' }, wrapper_html: { class: 'row' } %>
      <div class="form-group row">
        <div class="offset-md-2 col-md-8">
          <%= f.button :submit, (@ingredient.new_record? ? 'Add ingredient' : 'Update ingredient'), class: 'btn btn-success mr-4' %>
          [ <%= link_to 'Cancel request and return to ingredients listing', ingredients_path %> ]
        </div>
      </div>
      
    <% end %>  
  </div>
</div>
